# Analytics and Monitoring Configuration
# Copy this file to .env and fill in your actual API keys

# PostHog Analytics
VITE_POSTHOG_KEY=your_posthog_project_api_key_here
# Get your key from: https://app.posthog.com/project/settings

# Sentry Error Monitoring
VITE_SENTRY_DSN=your_sentry_dsn_here
# Get your DSN from: https://sentry.io/settings/projects/

# Mixpanel Analytics (Optional)
VITE_MIXPANEL_TOKEN=your_mixpanel_token_here
# Get your token from: https://mixpanel.com/settings/project

# Hotjar User Behavior (Optional)  
VITE_HOTJAR_ID=your_hotjar_site_id_here
VITE_HOTJAR_VERSION=6
# Get your ID from: https://insights.hotjar.com/site/

# Application Configuration
VITE_APP_VERSION=1.0.0
VITE_API_BASE_URL=https://your-backend-url.vercel.app/api

# Feature Flags (for development)
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_TRACKING=true
VITE_ENABLE_SESSION_RECORDING=false
VITE_ENABLE_DEBUG_MODE=false